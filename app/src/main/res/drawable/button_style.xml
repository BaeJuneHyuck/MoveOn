<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />
            <gradient
                android:angle="135"
                android:centerColor="#f44336"
                android:endColor="#ba000d"
                android:startColor="#ff7961"
                android:type="linear" />
        </shape>
    </item>
    <item android:top="1dp">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />

            <solid android:color="#ff7961" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />

            <solid android:color="#ff7961" />
        </shape>
    </item>

</layer-list>